<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:background="@color/splash">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/coupon_image"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coupon_content"
            android:text="아메리카노 한 잔 무료"
            android:textSize="22sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/coupon_image"
            android:layout_toEndOf="@+id/coupon_image"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coupon_date"
            android:text="유효기간"
            android:textSize="18sp"
            android:textColor="#a9a9a9"
            android:layout_toRightOf="@+id/coupon_image"
            android:layout_toEndOf="@+id/coupon_image"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/coupon_content"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="#ffffff"
            android:layout_marginLeft="15dp"
            android:text="사용하기"
            android:textStyle="bold"
            android:layout_toRightOf="@id/coupon_content" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>