<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/splash"
    tools:context=".AnotherActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Title"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="0/10개"
            android:layout_alignParentRight="true"
            android:textColor="#0033FF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/zone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_below="@+id/content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coupon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:background="@drawable/coupon_style"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@drawable/coupon_style"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@drawable/coupon_style"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@drawable/coupon_style"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@drawable/coupon_style"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zone1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coupon6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@drawable/coupon_style"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@drawable/coupon_style"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@drawable/coupon_style"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@drawable/coupon_style"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@drawable/coupon_style"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zone2"
        android:text="쿠폰 10개를 모아오시면 한개의 무료 음료를 드려요."
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:id="@+id/button2save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/zone2"
        android:layout_marginTop="50dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스탬프 적립하기"
            android:id="@+id/createQR"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰함 바로가기"
            android:id="@+id/scanQR"/>
    </LinearLayout>

</RelativeLayout>